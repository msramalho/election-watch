{
    "name": "election-watch",
    "version": "1.0.0",
    "description": "A UI for Election Watch - a platform for monitoring democratic elections and fighting online disinformation",
    "author": "msramalho",
    "private": true,
    "scripts": {
        "dev": "nuxt",
        "build": "nuxt build",
        "start": "nuxt start",
        "generate": "nuxt generate",
        "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
        "lint_fix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
        "build:gh-pages": "cross-env DEPLOY_ENV=GH_PAGES nuxt build",
